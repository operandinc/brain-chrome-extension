{
  "name": "Brain Chrome Extension",
  "description": "Provides functionality for indexing webpages to your Operand Brain",
  "version": "0.1.2",
  "manifest_version": 3,
  "icons": {
    "16": "./16.png",
    "48": "./48.png",
    "128": "./128.png"
  },
  "options_page": "./options.html",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Save to Brain"
  },
  "content_scripts": [
    {
      "matches": ["https://www.google.com/search*"],
      "js": ["content.bundle.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": ["tabs", "storage"],
  "background": {
    "service_worker": "background.js"
  }
}
