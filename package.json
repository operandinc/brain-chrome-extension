{
  "name": "operand-chrome-extension",
  "version": "0.0.1",
  "description": "Operand Chrome Extension",
  "license": "MIT",
  "scripts": {
    "watch:tailwind": "npx postcss src/tailwind.css -o build/tailwind.dist.css -w",
    "build:tailwind": "npx postcss src/tailwind.css -o build/tailwind.dist.css",
    "zip": "rm -f build.zip && zip -r build.zip build",
    "build": "node utils/build.js && npm run build:tailwind && npm run zip",
    "dev": "concurrently \"npm run watch:tailwind\" \"node utils/webserver.js\"",
    "prettier": "prettier --write '**/*.{js,jsx,ts,tsx,json,css,scss,md}'"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.4",
    "@heroicons/react": "^2.0.13",
    "@hot-loader/react-dom": "^17.0.2",
    "@operandinc/sdk": "^5.0.21",
    "@tailwindcss/line-clamp": "^0.4.2",
    "daisyui": "^2.42.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hot-loader": "^4.13.1",
    "react-icons": "^4.7.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.22.5",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@tailwindcss/typography": "^0.5.8",
    "@types/chrome": "^0.0.202",
    "@types/react": "^17.0.52",
    "@types/react-dom": "^17.0.11",
    "@types/uuid": "^9.0.0",
    "autoprefixer": "^10.4.13",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.3.0",
    "babel-preset-react-app": "^10.0.1",
    "clean-webpack-plugin": "^4.0.0",
    "concurrently": "^6.5.1",
    "copy-webpack-plugin": "^7.0.0",
    "css-loader": "^6.7.2",
    "eslint": "^8.27.0",
    "fs-extra": "^10.1.0",
    "html-loader": "^4.2.0",
    "html-webpack-plugin": "^5.5.0",
    "postcss": "^8.4.19",
    "postcss-cli": "^9.1.0",
    "postcss-loader": "^7.0.1",
    "prettier": "^2.7.1",
    "source-map-loader": "^3.0.1",
    "style-loader": "^3.3.1",
    "tailwindcss": "^3.2.4",
    "terser-webpack-plugin": "^5.3.6",
    "ts-loader": "^9.4.1",
    "typescript": "^4.9.3",
    "webpack": "^5.75.0",
    "webpack-dev-server": "^4.11.1"
  }
}
